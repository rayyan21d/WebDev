     <h1>Compose</h1>

     <div>
          <form method="post">
               <div class="form-group">
                    <label for="postTitle">Title</label>
                    <input type="text" name="postTitle" class="form-control" placeholder="Title">

               </div>
                    
               <div class="form-group">
                    <label for="postBody">Post</label>
                    <textarea name="postBody" row="5" cols="50" class="form-control"> </textarea>
               </div>
               
               <button type="submit" name="button" class="btn btn-primary">Publish</button>
          </form>

     </div>

     <%- include("partials/footer") -%>